<!doctype html>
<html lang="cs">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{ifset title}{include title|stripHtml} | {/ifset}UltimatePanel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;800&display=swap">
    <link rel="stylesheet" href="{$basePath}/css/app.css">
</head>
<body class="bg-dark text-light">
<nav class="navbar navbar-expand-lg navbar-dark bg-black border-bottom border-accent">
    <div class="container">
        <a class="navbar-brand brand-title" href="{$basePath}/">
            <span class="ultimate">Ultimate</span>Panel
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMain" aria-controls="navMain" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navMain">
            <ul class="navbar-nav ms-auto">
                {if $isLoggedIn}
                    <li class="nav-item"><a class="nav-link" n:href="Dashboard:default">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" n:href="Sign:out">Odhlásit</a></li>
                {else}
                    <li class="nav-item"><a class="nav-link" n:href="Sign:in">Přihlášení</a></li>
                    <li class="nav-item"><a class="nav-link" n:href="Sign:up">Registrace</a></li>
                {/if}
                {if $isAdmin}
                    <li class="nav-item"><a class="nav-link" n:href="Admin:default">Admin</a></li>
                {/if}
            </ul>
        </div>
    </div>
</nav>

<div class="container py-4">
    {foreach $flashes as $flash}
        <div class="alert alert-{$flash->type}">{$flash->message}</div>
    {/foreach}

    {include content}
</div>

<footer class="text-center text-secondary py-4 border-top border-accent">
    UltimatePanel v{$panelVersion} • {$panelDeveloper}
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="{$basePath}/js/app.js"></script>
</body>
</html>
